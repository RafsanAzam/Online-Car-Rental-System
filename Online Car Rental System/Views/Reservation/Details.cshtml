@model Online_Car_Rental_System.Models.Reservation

@{
    ViewData["HideSearchBox"] = true;
    ViewData["HideUL"] = true;
    ViewData["Title"] = "Reservation Details";
}

<h1>Reservation Details</h1>

<div class="card">
    <div class="card-header">
        <h3>@Model.Car.Brand @Model.Car.CarModel</h3>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Reservation ID</dt>
            <dd class="col-sm-9">@Model.ReservationId</dd>

            <dt class="col-sm-3">Car Model</dt>
            <dd class="col-sm-9">@Model.Car.Brand @Model.Car.CarModel</dd>

            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.UserEmail</dd>

            <dt class="col-sm-3">Mobile Number</dt>
            <dd class="col-sm-9">@Model.MobileNumber</dd>

            <dt class="col-sm-3">Valid Driver License</dt>
            <dd class="col-sm-9">@Model.HasValidDriverLicense</dd>

            <dt class="col-sm-3">Rent Start Date</dt>
            <dd class="col-sm-9">@Model.RentStartDate.ToString("dd-MMM-yyyy")</dd>

            <dt class="col-sm-3">Rent End Date</dt>
            <dd class="col-sm-9">@Model.RentEndDate.ToString("dd-MMM-yyyy")</dd>

            <dt class="col-sm-3">Quantity</dt>
            <dd class="col-sm-9">@Model.Quantity</dd>

            <dt class="col-sm-3">Total Price</dt>
            <dd class="col-sm-9">$@Model.TotalPrice</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@Model.Status</dd>
        </dl>
    </div>
    <div class="card-footer">
        @if (Model.Status == "Unconfirmed")
        {
            <a asp-action="Confirm" asp-route-id="@Model.ReservationId" class="btn btn-primary">Confirm Order</a>
        }
        <a asp-action="Edit" asp-route-id="@Model.ReservationId" class="btn btn-primary">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model.ReservationId" class="btn btn-danger">Delete</a>
    </div>
</div>
