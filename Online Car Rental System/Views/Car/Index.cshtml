@model IEnumerable<Online_Car_Rental_System.Models.Car>
@{
    ViewData["Title"] = "Car List";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-center mb-0">Available Cars</h2>
    </div>   

    <div id="gridView" class="d-none">
       
        <table class="table">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Type</th>
                    <th>Brand</th>
                    <th>Model</th>
                    <th>Mileage</th>
                    <th>Fuel Type</th>
                    <th>Seats</th>
                    <th>Price Per Day</th>
                    <th>Availability</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var car in Model)
                {
                    <tr>
                        <td><img src="@Url.Content("~/" + car.Image)" alt="@car.CarModel" style="width:100px;height:auto;"></td>
                        <td>@car.Type</td>
                        <td>@car.Brand</td>
                        <td>@car.CarModel</td>
                        <td>@car.Mileage</td>
                        <td>@car.FuelType</td>
                        <td>@car.Seats</td>
                        <td>@car.PricePerDay</td>
                        <td>@car.Availability</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@car.CarId" class="btn btn-primary">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div id="cardView" class="row">
        

        @foreach (var car in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="@Url.Content("~/" + car.Image)" class="card-img-top" alt="@car.CarModel" style="height: 250px; object-fit:cover;">
                    <div class="card-body text-center">
                        <h5 class="card-title">@car.CarModel</h5>
                        <p class="card-text">@car.Brand</p>
                        <p class="card-text text-muted">@car.PricePerDay.ToString("C")</p>
                        <a asp-action="Details" asp-route-id="@car.CarId" class="btn btn-primary">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


                   